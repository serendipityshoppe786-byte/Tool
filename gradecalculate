  <!-- JavaScript for functionality -->
  <script>
    document.getElementById('gradeCalcForm').addEventListener('submit', function(event) {
      event.preventDefault();
      
      const totalQ = parseFloat(document.getElementById('totalQuestions').value);
      const perQ = parseFloat(document.getElementById('scorePerQuestion').value);
      const attempted = parseFloat(document.getElementById('questionsAttempted').value);
      const scale = document.getElementById('gradingScale').value;
      
      if (attempted > totalQ) {
        alert('Questions attempted cannot exceed total number of questions.');
        return;
      }
      
      const totalMarksPossible = totalQ * perQ;
      const obtained = attempted * perQ;
      const percentage = (obtained / totalMarksPossible) * 100;
      
      // Display
      document.getElementById('totalMarks').textContent = totalMarksPossible.toFixed(2);
      document.getElementById('obtainedMarks').textContent = obtained.toFixed(2);
      document.getElementById('percent').textContent = percentage.toFixed(2) + '%';
      
      let gradeOrGPA = '';
      let showGrade = false;
      
      if (scale === 'letter_us') {
        showGrade = true;
        if (percentage >= 90) gradeOrGPA = 'A';
        else if (percentage >= 80) gradeOrGPA = 'B';
        else if (percentage >= 70) gradeOrGPA = 'C';
        else if (percentage >= 60) gradeOrGPA = 'D';
        else gradeOrGPA = 'F';
      } else if (scale === 'gpa_4') {
        showGrade = true;
        // Simple mapping; you can refine
        if (percentage >= 93) gradeOrGPA = '4.0';
        else if (percentage >= 90) gradeOrGPA = '3.7';
        else if (percentage >= 87) gradeOrGPA = '3.3';
        else if (percentage >= 83) gradeOrGPA = '3.0';
        else if (percentage >= 80) gradeOrGPA = '2.7';
        else if (percentage >= 77) gradeOrGPA = '2.3';
        else if (percentage >= 73) gradeOrGPA = '2.0';
        else if (percentage >= 70) gradeOrGPA = '1.7';
        else if (percentage >= 60) gradeOrGPA = '1.0';
        else gradeOrGPA = '0.0';
      }
      
      if (showGrade) {
        document.getElementById('gradeOrGPALine').style.display = 'block';
        document.getElementById('gradeOrGPA').textContent = gradeOrGPA;
      } else {
        document.getElementById('gradeOrGPALine').style.display = 'none';
      }
      
      document.getElementById('results').style.display = 'block';
      
    });
  </script>
